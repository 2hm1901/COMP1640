@model List<COMP1640.ViewModels.DocumentViewModel>

@{
    ViewData["Title"] = "Document Upload";
}

<!-- Main Content -->
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fs-4 fw-bold">Uploaded Documents</h1>
        <button class="btn btn-secondary">Upload</button>
    </div>

    <div class="row">
        @foreach (var doc in Model)
        {
            <div class="">
                <div class="card mb-4">
                    <div class="card-body">
                        <!-- File Name & Delete -->
                        <div class="d-flex justify-content-between align-items-center border-bottom pb-2">
                            <div>
                                <a href="#" class="fw-semibold text-primary">@doc.DocumentName</a>
                            </div>
                            <div class="text-end">
                                <div class="text-muted small">@doc.Author</div>
                                <div class="text-muted small">@doc.DateUploaded.ToString("dd MMMM yyyy, hh:mm tt")</div>
                            </div>
                            <button class="btn btn-sm text-danger">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </div>

                        <!-- Comments -->
                        <div class="mt-3">
                            @foreach (var comment in doc.Comments)
                            {
                                <div class="mb-3">
                                    <h6 class="fw-bold small">@comment.Author</h6>
                                    <p class="text-muted small">@comment.Content</p>
                                </div>
                            }
                        </div>

                        <!-- Comment Box -->
                        <div class="mt-3">
                            <textarea class="form-control" rows="2" placeholder="Write a comment..."></textarea>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>