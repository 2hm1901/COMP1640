 @model List<COMP1640.ViewModels.StudentMessageViewModel>

<!-- Main Content -->
<div class="row mt-4 px-4">
    <!-- Students Section -->
    <div class="col-md-4">
        <div class="bg-white p-3 rounded shadow-sm">
            <h5>Students</h5>
            <hr>

            @foreach (var student in Model)
            {
                <div class="student">
                    <p>
                        <strong>@student.StudentName</strong><br>
                        @student.LastMessage
                    </p>
                    <a href="@Url.Action("Index", "Chat", new { userId = student.StudentId })" class="btn btn-sm btn-primary">Chat</a>
                </div>
                <hr>
            }

            @if (!Model.Any())
            {
                <p class="text-muted">No students assigned yet.</p>
            }
        </div>
    </div>

    <!-- Upcoming Meetings Section -->
    <div class="col-md-8">
